#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num1,answer;
	printf("please enter 1 number");
	fflush(stdout);
	scanf("%d",&num1);
	answer=num1*num1;
	printf("your answer is : %d",answer);
	return EXIT_SUCCESS;
}
